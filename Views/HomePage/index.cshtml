@using EPiServer.Core
@using EPiServer.Web.Mvc.Html

@model EPiServer.Commerce.Models.ViewModels.IPageViewModel<EPiServer.Commerce.Models.Pages.HomePage>

<div id="frontpage">
  @Html.PropertyFor(x=>x.CurrentPage.MainContent, new { CssClass = "overflow-hidden clearfix" })
</div>

@section scripts {
    @Scripts.Render("~/bundles/frontpage")
<script type="text/javascript">
    $(function () { commercestarterkit.FrontPage.init('#frontpage'); });
</script>
}
    }

@section BodyStart {
    @Html.FullRefreshPropertiesMetaData()
    }

@section Header {
    @Html.Partial("_Header", Model)
    }